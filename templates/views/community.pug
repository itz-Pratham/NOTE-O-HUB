doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Community Page
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        /* background-image: url('https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fimages.hdqwalls.com%2Fdownload%2Fdesert-sand-landscape-5k-x1-1920x1080.jpg&f=1&nofb=1&ipt=d126d04123d84fae0bcf1d23888b257699645217f13d2ed60aa8aa750f76c141&ipo=images'); */
        background-color: #88cc779e;
        background-repeat: no-repeat;
        background-size: cover;
      }
      .community-table {
        margin-top:100px;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        padding: 20px;
        margin: 20px auto;
        max-width: 1000px;
      }
      .community-header {
        grid-column: 1 / -1;
        text-align: center;
        font-size: 44px;
        color: #000000;
        margin-bottom: 20px;
        text-decoration: underline;
      }
      .community-free, .community-paid {
        background-color: #a10d0d;
        border: 1px solid #ccc;
        border-radius: 5%;
        box-shadow: 5px 5px 5px rgb(165, 157, 42);
        padding: 20px;
      }
      .community-free h2, .community-paid h2 {
        text-align: center;
        font-size: 20px;
        margin-bottom: 30px;
        text-decoration: underline;
      }
      .community-free ul, .community-paid ul {
        list-style-type: none;
        padding: 0;
      }
      .community-free ul li, .community-paid ul li {
        margin-left: 15px;
        padding-left: 10px;
        list-style:disc ;
        margin-bottom: 5px;
        color: #ccc;
      }
      .community-free h3,.community-paid h3 {
        color: #ffffff;
        margin-top:10px;
        text-align: center;
        align-items: center;
        align-self: center;
      }
      button {
        margin-left: 10rem;
        margin-top:10px;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        background-color: #ededed;
        color: #000000;
        font-size: 16px;
        cursor: pointer;
      }
      button:hover {
        background-color: #bfb94b;
      }
      .superContainer{
        padding-top:100px
      }
  body
    include ../partials/navbar.pug
