doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Subject Selection
    link(rel='stylesheet', href='semester.css')
  body
    .container
      .image-container
        img.image(src='photo.webp', alt='Image', height='70', width='50')
      .text-container
        h1(style='font-size:80px;') STEP TOWARDS SUCCESS
        .dropdowns
          //
            <select id="branch-select">
            <option value="cse">CSE</option>
            <option value="ece">ECE</option>
            <option value="it">IT</option>
            </select>
          select#semester-select
            option(value='sem1') Semester 1
            option(value='sem2') Semester 2
            option(value='sem3') Semester 3
            option(value='sem4') Semester 4
            option(value='sem5') Semester 5
            option(value='sem6') Semester 6
        #subject-container.subject-container
    script.
      const semesterSelect = document.getElementById('semester-select');
      const subjectContainer = document.getElementById('subject-container');
      const subjects = {
      sem1: ['PRINCIPLES OF MANAGEMENT', 'BUISNESS ECONOMICS-1', 'BUISNESS MATHEMATICS ', 'COMPUTER FUNDAMENTALS', 'FINANCIAL ACCOUNTING', 'HUMAN VALUE ETHICS'],
      sem2: ['BUISNESS ORGANIZATION ', 'BUISNESS ECONOMICS -2', 'OPERATIONS RESEARCH IN MANAGEMENT', 'DBMS', ' COST ACCOUNTING', 'COMMUNICATION SKILLS'],
      sem3: ['ORGANIZATIONAL BEHAVIOUR', 'INDIAN ECONOMY', 'MARKETING MANAGEMENT', 'COMPUTER APPLICATIONS', 'MANAGEMENT ACCOUNTING', 'IKS'],
      sem4: ['HUMAN RESOURCE MANAGEMENT ', 'BUISNESS ENVIRONMENT', 'BUISNESS LAWS ', 'TECHNICAL WRITING ', 'TAXATION LAWS ', 'MARKETING RESEARCH'],
      sem5: ['BUISNESS KNOWLEDGE', 'ENVIRONMENTAL SCIENCE', 'TECHNICAL WRITING', 'ENTREPERNEURSHIP DEVLOPMENT', 'PROJECT PLANNING', 'INDUSTRIAL MANAGEMENT'],
      sem6: ['VALUES AND ETHINCS', 'SUMMER TRAINING', 'PRINCIPLES OF MANAGEMENT', 'INTERNATIONAL BUISNESS MANAGEMENT', 'PROJECT REPORT', 'FINANCIAL MANAGEMENT'],
      };
      function populateSubjects() {
      const selectedSemester = semesterSelect.value;
      subjectContainer.innerHTML = '';
      subjects[selectedSemester].forEach(subject => {
      const card = document.createElement('div');
      card.classList.add('card');
      card.textContent = subject;
      subjectContainer.appendChild(card);
      });
      }
      populateSubjects();
      semesterSelect.addEventListener('change', populateSubjects);